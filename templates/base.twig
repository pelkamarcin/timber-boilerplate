{% block head %}

    {% include 'partials/html-header.twig' %}
    {% block head_append '' %}
    </head>

{% endblock %}

<body class="{{ body_class }}">
{% include 'sprite.svg' ignore missing %}

<div class="c-page-wrapper">

    {% block header %}
        {% include 'partials/header.twig' %}
    {% endblock %}

    <main class="c-content-area"
          id="main-content">

        {% block content_area_prepend '' %}

        {% block content_area_inner %}
            {% if posts %}
                {% include 'partials/posts-section-partial.twig' with {'posts':posts} %}
            {% else %}
                {{ __('Sorry, no content', 'sfy') }}
            {% endif %}
        {% endblock %}

        {% block content_area_append '' %}

    </main>
</div>

{# a block ready to be filled with some default content (but blank for now) #}
{% block footer_before '' %}

{% block footer %}
    <footer class="c-footer">
        {% include 'partials/footer.twig' %}
    </footer>
{% endblock %}

{% block footer_after '' %}

{{ function('wp_footer') }}

</body>
</html>
