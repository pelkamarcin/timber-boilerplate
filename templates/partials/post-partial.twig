{% if post %}
    <li>

        {% include 'partials/thumbnail.twig' with {'post': post, 'size':'third_high', 'classes': 'thumbnail-class'} %}

        <a href="{{ post.link }}">
            <h3>{{ post.title }}</h3>
            <div>{{ post.post_excerpt|e('wp_kses_post') }}</div>
        </a>

    </li>
{% endif %}
